import RelatedPosts from "../components/RelatedPosts.astro";

const metaTitle = "The Importance of Inclusive Design in Automotive Industry";
const metaDescription =
  "Why inclusive design matters in vehicles—accessibility, safety, wider appeal—and examples like accessible vehicles, voice controls, and wide entryways.";
const currentSlug = "the-importance-of-inclusive-design-in-automotive-industry";
const base = import.meta.env.BASE_URL.endsWith("/") ? import.meta.env.BASE_URL : `${import.meta.env.BASE_URL}/`;
const ogImage = `${base}logo.png`;
---

<BaseLayout title={metaTitle} description={metaDescription} headerVariant="solid">
