<style>
  .article {
    background: #fff;
    border: 1px solid var(--border);
    border-radius: 12px;
    padding: 1.25rem;
    display: grid;
    gap: 1rem;
  }

  .article-head h1 {
    margin: 0.35rem 0 0;
    color: #451e5d;
  }

  .article-date {
    margin: 0;
    color: var(--secondary);
    font-weight: 600;
  }

  .article-grid {
    display: grid;
    grid-template-columns: 3fr 1.4fr;
    gap: 1rem;
    align-items: start;
  }

  .article-body {
    display: grid;
    gap: 0.75rem;
  }

  h2 {
    color: #451e5d;
    margin: 0.35rem 0 0.15rem;
  }

  p {
    margin: 0;
    color: var(--text-body);
    line-height: 1.6;
  }

  ul {
    margin: 0 0 0.5rem;
    padding-left: 1.2rem;
    color: var(--text-body);
  }

  .sidebar {
    position: sticky;
    top: 80px;
  }

  .products-card {
    border: 1px solid var(--border);
    border-radius: 12px;
    background: #fff;
    padding: 0.9rem;
    display: grid;
    gap: 0.75rem;
  }

  .products-card h2 {
    margin: 0;
    color: #451e5d;
  }

  .product-card {
    display: grid;
    gap: 0.5rem;
    border: 1px solid var(--border);
    border-radius: 10px;
    padding: 0.6rem;
    text-decoration: none;
    color: inherit;
    background: #f9f9f9;
  }

  .product-card:hover {
    border-color: #451e5d;
  }

  .video-frame {
    position: relative;
    width: 100%;
    aspect-ratio: 16 / 9;
    overflow: hidden;
    border-radius: 8px;
    background: #000;
  }

  .video-frame iframe {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    border: 0;
  }

  .product-body {
    display: grid;
    gap: 0.15rem;
  }

  .product-title {
    margin: 0;
    font-weight: 700;
    color: #451e5d;
  }

  .product-link {
    margin: 0;
    color: var(--secondary);
    font-size: 0.9rem;
  }

  @media (max-width: 900px) {
    .article-grid {
      grid-template-columns: 1fr;
    }

    .sidebar {
      position: static;
    }
  }
</style>
