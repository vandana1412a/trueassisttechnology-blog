<style>
  .article {
    background: #fff;
    border: 1px solid var(--border);
    border-radius: 12px;
    padding: 1.25rem;
    display: grid;
    gap: 1rem;
  }

  .article-head h1 {
    margin: 0.35rem 0 0;
    color: #451e5d;
  }

  .article-date {
    margin: 0;
    color: var(--secondary);
    font-weight: 600;
  }

  .article-grid {
    display: grid;
    grid-template-columns: 3fr 1.4fr;
    gap: 1.25rem;
  }

  .article-body {
    display: grid;
    gap: 0.9rem;
    line-height: 1.65;
    color: var(--text-body);
  }

  h2, h3 {
    color: #451e5d;
    margin: 0.5rem 0 0.35rem;
  }

  p {
    margin: 0;
    color: var(--text-body);
    line-height: 1.6;
  }

  ul {
    margin: 0;
    padding-left: 1.2rem;
    color: var(--text-body);
  }

  .sidebar {
    position: sticky;
    top: 96px;
    align-self: start;
  }

  .products-card {
    border: 1px solid var(--border);
    border-radius: 12px;
    padding: 1rem;
    background: #f9f9f9;
    display: grid;
    gap: 0.75rem;
  }

  .products-card h2 {
    margin: 0;
    color: #451e5d;
  }

  .product-card {
    display: grid;
    gap: 0.5rem;
    border: 1px solid var(--border);
    border-radius: 10px;
    padding: 0.6rem;
    text-decoration: none;
    background: #fff;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .product-card:hover,
  .product-card:focus-visible {
    box-shadow: var(--shadow);
    transform: translateY(-2px);
    outline: none;
  }

  .video-frame {
    position: relative;
    padding-top: 56.25%;
    border-radius: 10px;
    overflow: hidden;
    background: #000;
  }

  .video-frame iframe {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    border: 0;
  }

  .product-body {
    display: grid;
    gap: 0.1rem;
  }

  .product-title {
    margin: 0;
    font-weight: 700;
    color: #451e5d;
  }

  .product-link {
    margin: 0;
    color: var(--secondary);
    font-size: 0.95rem;
  }

  @media (max-width: 960px) {
    .article-grid {
      grid-template-columns: 1fr;
    }

    .sidebar {
      position: static;
    }
  }
</style>
