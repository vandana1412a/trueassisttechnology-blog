</BaseLayout>

<style>
  .posts-head h2 {
    margin: 0 0 0.25rem;
    color: #451e5d;
  }

  .posts-head p {
    margin: 0 0 1rem;
  }

  .content-grid {
    display: grid;
    grid-template-columns: 2.5fr 1fr;
    gap: 1.5rem;
    margin: 2rem 0 3rem;
  }

  .main-col {
    display: grid;
    gap: 1rem;
  }

  .posts-list {
    display: grid;
    gap: 0.75rem;
  }

  .post-row {
    display: grid;
    grid-template-columns: 120px 1fr;
    gap: 0.75rem;
    border: 1px solid var(--border);
    border-radius: 12px;
    background: #fff;
    box-shadow: var(--shadow);
    overflow: hidden;
  }

  .thumb {
    background: linear-gradient(135deg, rgba(69, 30, 93, 0.08), rgba(69, 30, 93, 0.04));
  }

  .post-body {
    padding: 0.75rem 0.9rem;
  }

  .post-date {
    margin: 0;
    color: var(--secondary);
    font-weight: 600;
    font-size: 0.9rem;
  }

  .post-body h3 {
    margin: 0 0 0.35rem;
    color: #451e5d;
  }

  .read-more {
    font-weight: 700;
    color: #451e5d;
  }

  .read-more:hover {
    color: var(--link-hover);
  }

  .sidebar {
    display: grid;
    gap: 1rem;
  }

  .sidebar-card {
    border: 1px solid var(--border);
    border-radius: 12px;
    padding: 1rem;
    background: #fff;
    box-shadow: var(--shadow);
  }

  .sidebar-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: grid;
    gap: 0.4rem;
  }

  .sidebar-list a {
    color: #451e5d;
    text-decoration: none;
    font-weight: 600;
  }

  .sidebar-list a:hover {
    color: var(--link-hover);
  }

  .contact-item {
    display: grid;
    grid-template-columns: auto 1fr;
    gap: 0.5rem;
    align-items: center;
    margin-bottom: 0.5rem;
  }

  .contact-item p {
    margin: 0;
    color: #444;
  }

  .contact-link {
    color: #451e5d;
    font-weight: 700;
    text-decoration: none;
  }

  .contact-link:hover { color: var(--link-hover); }

  .contact-actions {
    display: grid;
    gap: 0.5rem;
    margin-top: 0.75rem;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.7rem 1rem;
    border-radius: 10px;
    border: 1px solid var(--border);
    font-weight: 700;
    text-decoration: none;
    cursor: pointer;
  }

  .btn.full { width: 100%; }

  .btn.primary {
    background: #451e5d;
    color: #fff;
    border-color: #451e5d;
  }

  .btn.whatsapp {
    background: #25d366;
    color: #0b3d19;
    border: none;
  }

  @media (max-width: 960px) {
    .content-grid {
      grid-template-columns: 1fr;
    }

    .post-row {
      grid-template-columns: 1fr;
    }
  }
</style>
