---
import BaseLayout from "../layouts/BaseLayout.astro";
import { posts } from "../components/BlogData.astro";
import PostList from "../components/PostList.astro";

const sortedPosts = [...posts].sort(
  (a, b) => new Date(b.date).valueOf() - new Date(a.date).valueOf()
);
---

<BaseLayout
  title="TrueAssist Technology | Accessibility & Mobility Insights"
  description="Guides, ramp design tips, and assistive technology knowledge from TrueAssist Technology."
  headerVariant="solid"
>
  <section class="content-grid" id="articles" aria-label="Latest blog articles">
    <div class="main-col">
      <PostList posts={sortedPosts} heading="Latest Articles" />
    </div>

    <aside class="sidebar" aria-label="Sidebar">
      <div class="sidebar-card contact-card">
        <h3>Contact Us</h3>
        <div class="contact-item">
          <span class="contact-icon" aria-hidden="true">A</span>
          <p>
            C-102 Devasandra Industrial Estate,<br />
            Mahadevapura, Bengaluru,<br />
            Karnataka - 560048
          </p>
        </div>
        <div class="contact-item">
          <span class="contact-icon" aria-hidden="true">P</span>
          <a class="contact-link" href="https://wa.me/919900306443" aria-label="WhatsApp TrueAssist at +91 99003 06443">+91 99003 06443</a>
        </div>
        <div class="contact-item">
          <span class="contact-icon" aria-hidden="true">E</span>
          <a class="contact-link" href="mailto:hello@trueassistech.com">hello@trueassistech.com</a>
        </div>
        <div class="contact-actions">
          <a class="btn whatsapp full" href="https://wa.me/919900306443" aria-label="Chat on WhatsApp">WhatsApp</a>
          <a class="btn primary full" href="mailto:hello@trueassistech.com">Email</a>
        </div>
      </div>
      <div class="sidebar-card">
        <h3>Popular Posts</h3>
        <ul class="sidebar-list">
          <li><a href="/ramp-calculator">Ramp Calculator</a></li>
          <li><a href="#">Wheelchair Ramps</a></li>
          <li><a href="#">Portable ramp checklist</a></li>
        </ul>
      </div>
    </aside>
  </section>
</BaseLayout>

<style>
  .content-grid {
    display: grid;
    grid-template-columns: 2.5fr 1fr;
    gap: 1.5rem;
    margin: 2rem 0 3rem;
  }

  .main-col {
    display: grid;
    gap: 1rem;
  }

  .sidebar {
    display: grid;
    gap: 1rem;
  }

  .sidebar-card {
    border: 1px solid var(--border);
    border-radius: 12px;
    padding: 1rem;
    background: #fff;
    box-shadow: var(--shadow);
  }

  .sidebar-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: grid;
    gap: 0.4rem;
  }

  .sidebar-list a {
    color: #451e5d;
    text-decoration: none;
    font-weight: 600;
  }

  .sidebar-list a:hover {
    color: var(--link-hover);
  }

  .contact-item {
    display: grid;
    grid-template-columns: auto 1fr;
    gap: 0.5rem;
    align-items: center;
    margin-bottom: 0.5rem;
  }

  .contact-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 30px;
    height: 30px;
    border-radius: 999px;
    background: rgba(69, 30, 93, 0.1);
    color: #451e5d;
    font-weight: 700;
    font-size: 0.9rem;
  }

  .contact-item p {
    margin: 0;
    color: #444;
  }

  .contact-link {
    color: #451e5d;
    font-weight: 700;
    text-decoration: none;
  }

  .contact-link:hover { color: var(--link-hover); }

  .contact-actions {
    display: grid;
    gap: 0.5rem;
    margin-top: 0.75rem;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.7rem 1rem;
    border-radius: 10px;
    border: 1px solid var(--border);
    font-weight: 700;
    text-decoration: none;
    cursor: pointer;
  }

  .btn.full { width: 100%; }

  .btn.primary {
    background: #451e5d;
    color: #fff;
    border-color: #451e5d;
  }

  .btn.whatsapp {
    background: #25d366;
    color: #0b3d19;
    border: none;
  }

  @media (max-width: 960px) {
    .content-grid {
      grid-template-columns: 1fr;
    }

    .post-row {
      grid-template-columns: 1fr;
    }
  }
</style>
