---
import BaseLayout from "../layouts/BaseLayout.astro";
import { posts } from "../components/BlogData.astro";
import PostList from "../components/PostList.astro";

const sortedPosts = [...posts].sort(
  (a, b) => new Date(b.date).valueOf() - new Date(a.date).valueOf()
);
const base = import.meta.env.BASE_URL.endsWith("/")
  ? import.meta.env.BASE_URL
  : `${import.meta.env.BASE_URL}/`;
---

<BaseLayout
  title="TrueAssist Technology | Accessibility & Mobility Insights"
  description="Guides, ramp design tips, and assistive technology knowledge from TrueAssist Technology."
  headerVariant="solid"
>
  <section class="content-grid" id="articles" aria-label="Latest blog articles">
    <div class="main-col">
      <PostList posts={sortedPosts} heading="Latest Posts" />
    </div>

    <aside class="sidebar" aria-label="Sidebar">
      <div class="sidebar-card contact-card">
        <h3>Contact TrueAssist</h3>
        <div class="contact-actions two-up">
          <a class="btn whatsapp" href="https://wa.me/919900306443" aria-label="WhatsApp TrueAssist at +91 99003 06443">
            WhatsApp Us
          </a>
          <a class="btn primary" href="mailto:hello@trueassistech.com">Email Us</a>
        </div>
      </div>
      <div class="sidebar-card">
        <h3>Popular Posts</h3>
        <ul class="sidebar-list">
          <li><a href={`${base}ramp-calculator/`}>Ramp Calculator</a></li>
          <li><a href={`${base}how-turnplus-swivel-seat-can-change-lives-the-story-of-mr-sam-j-paramban/`}>TurnPlus Swivel Seat Story</a></li>
          <li><a href={`${base}hydraulic-wheelchair-lifts-for-cars-vans-a-complete-guide-to-accessible-travel-in-india/`}>Hydraulic Wheelchair Lifts Guide</a></li>
        </ul>
      </div>
    </aside>
  </section>
</BaseLayout>

<style>
  .content-grid {
    display: grid;
    grid-template-columns: minmax(0, 1fr) 340px;
    gap: 1.5rem;
    margin: 2rem 0 3rem;
    align-items: start;
  }

  .main-col {
    display: grid;
    gap: 1rem;
  }

  .sidebar {
    display: grid;
    gap: 1rem;
    align-self: start;
  }

  .sidebar-card {
    border: 1px solid var(--border);
    border-radius: 12px;
    padding: 1rem;
    background: #fff;
    box-shadow: var(--shadow);
    width: 100%;
  }

  .sidebar-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: grid;
    gap: 0.4rem;
    max-height: 220px;
    overflow-y: auto;
  }

  .sidebar-list a {
    color: #451e5d;
    text-decoration: none;
    font-weight: 600;
  }

  .sidebar-list a:hover {
    color: var(--link-hover);
  }

  .contact-actions {
    display: grid;
    gap: 0.5rem;
    margin-top: 0.75rem;
  }

  .contact-actions.two-up {
    grid-template-columns: repeat(2, minmax(0, 1fr));
  }

  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.7rem 1rem;
    border-radius: 10px;
    border: 1px solid var(--border);
    font-weight: 700;
    text-decoration: none;
    cursor: pointer;
  }

  .btn.full { width: 100%; }

  .btn.primary {
    background: #451e5d;
    color: #fff;
    border-color: #451e5d;
  }

  .btn.whatsapp {
    background: #25d366;
    color: #0b3d19;
    border: none;
  }

  @media (max-width: 720px) {
    .contact-actions.two-up {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 960px) {
    .content-grid {
      grid-template-columns: 1fr;
    }

    .post-row {
      grid-template-columns: 1fr;
    }
  }
</style>
