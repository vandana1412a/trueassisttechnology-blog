---
const { posts = [], heading = "Latest Posts" } = Astro.props;
const base = import.meta.env.BASE_URL.endsWith("/")
  ? import.meta.env.BASE_URL
  : `${import.meta.env.BASE_URL}/`;
const withBase = (url) => (url.startsWith("/") ? `${base}${url.replace(/^\//, "")}` : url);
---

<section class="posts-section" aria-label={heading}>
  <div class="posts-head">
    <h2>{heading}</h2>
  </div>
  <div class="posts-list" data-post-list>
    {posts.map((post) => (
      <article
        class="post-row"
        data-title={post.title.toLowerCase()}
        data-content={(post.content || "").toLowerCase()}
      >
        <div class="post-body">
          <p class="post-date">{post.date}</p>
          <h3>{post.title}</h3>
          <p class="muted">{post.excerpt}</p>
          <a class="read-more" href={withBase(post.link)}>Read more</a>
        </div>
      </article>
    ))}
  </div>
  <p class="no-results" data-no-results hidden>No results found.</p>
</section>

<style>
  .posts-section {
    display: grid;
    gap: 0.75rem;
  }

  .posts-head h2 {
    margin: 0 0 0.25rem;
    color: #451e5d;
  }

  .posts-list {
    display: grid;
    gap: 0.75rem;
  }

  .post-row {
    display: block;
    border: 1px solid var(--border);
    border-radius: 12px;
    background: #fff;
    box-shadow: var(--shadow);
    padding: 0.85rem 1rem;
  }

  .post-body {
    display: grid;
    gap: 0.35rem;
  }

  .post-date {
    margin: 0;
    color: var(--secondary);
    font-weight: 600;
    font-size: 0.9rem;
  }

  .post-body h3 {
    margin: 0 0 0.35rem;
    color: #451e5d;
  }

  .read-more {
    font-weight: 700;
    color: #451e5d;
  }

  .read-more:hover {
    color: var(--link-hover);
  }

  .no-results {
    margin: 0;
    color: var(--secondary);
    font-weight: 700;
  }
</style>
