---
import { posts } from "./BlogData.astro";

const { variant = "solid" } = Astro.props;
const isTransparent = variant === "transparent";
const base = import.meta.env.BASE_URL.endsWith("/")
  ? import.meta.env.BASE_URL
  : `${import.meta.env.BASE_URL}/`;
const toUrl = (url) => (url.startsWith("/") ? `${base}${url.replace(/^\//, "")}` : url);
---

<header class:list={["site-header", isTransparent ? "transparent" : "solid"]}>
  <div class="header-bar page-shell">
    <a class="logo" href="https://www.trueassistech.com/">
      <img src={`${base}logo.png`} alt="TrueAssist Technology" />
    </a>

    <div class="header-actions">
      <form class="search" id="site-search-form" role="search">
        <label class="sr-only" for="site-search">Search articles</label>
        <div class="search-box">
          <input
            type="search"
            id="site-search"
            name="search"
            placeholder="Search articles‚Ä¶"
            aria-label="Search articles"
          />
          <button type="submit" id="site-search-btn" aria-label="Run search">
            <span aria-hidden="true">üîç</span>
          </button>
        </div>
        <div class="search-results" id="search-results" role="listbox" aria-live="polite"></div>
      </form>
    </div>

  </div>
</header>

<style>
  .site-header {
    position: sticky;
    top: 0;
    z-index: 1000;
  }
  .site-header.solid { background: #fff; border-bottom: 1px solid var(--border); }
  .site-header.transparent { background: transparent; border: none; }

  .header-bar {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
    padding: 1rem 1.25rem;
    flex-wrap: wrap;
  }

  .logo { display: inline-flex; align-items: center; }
  .logo img { height: 52px; width: auto; display: block; }

  .header-actions {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    flex: 1;
    min-width: 280px;
    justify-content: flex-end;
  }

  .search {
    position: relative;
    min-width: 260px;
    width: 100%;
  }

  .search-box {
    display: grid;
    grid-template-columns: 1fr auto;
    align-items: center;
    gap: 0.5rem;
  }

  .search input {
    padding: 0.6rem 0.85rem;
    border-radius: 999px;
    border: 1px solid var(--border);
    width: 100%;
  }

  .search button {
    padding: 0.45rem 0.75rem;
    border-radius: 50%;
    border: 1px solid #451e5d;
    background: #451e5d;
    color: #fff;
    font-weight: 700;
    cursor: pointer;
  }

  .search button:hover,
  .search button:focus-visible {
    background: #5a2677;
    border-color: #5a2677;
  }

  .search-results {
    position: absolute;
    top: calc(100% + 6px);
    right: 0;
    left: 0;
    background: #fff;
    border: 1px solid var(--border);
    border-radius: 12px;
    box-shadow: var(--shadow);
    padding: 0.5rem;
    display: none;
    z-index: 40;
  }

  .search-results.active {
    display: grid;
    gap: 0.5rem;
  }

  .search-item {
    padding: 0.5rem 0.6rem;
    border-radius: 10px;
    border: 1px solid transparent;
  }

  .search-item:hover,
  .search-item:focus-within {
    border-color: var(--border);
    background: rgba(69, 30, 93, 0.05);
  }

  .search-item h4 {
    margin: 0 0 0.2rem;
    font-size: 0.95rem;
    color: #451e5d;
  }

  .search-item p {
    margin: 0;
    color: var(--text-muted);
    font-size: 0.85rem;
  }

  @media (max-width: 900px) {
    .header-bar {
      flex-direction: row;
      align-items: center;
    }

    .search-box {
      grid-template-columns: 1fr;
    }

    .search button {
      width: 44px;
      height: 44px;
    }
  }

  @media (max-width: 600px) {
    .search { min-width: 100%; }
    .header-actions { width: 100%; }
    .header-bar { justify-content: center; }
  }
</style>

<script is:inline>
const posts = ${JSON.stringify(posts)};
const searchInput = document.getElementById("site-search");
const searchForm = document.getElementById("site-search-form");
const searchBtn = document.getElementById("site-search-btn");
const listContainer = document.querySelector("[data-post-list]");
const cards = listContainer ? Array.from(listContainer.querySelectorAll(".post-row")) : [];
const noResults = document.querySelector("[data-no-results]");
const resultsEl = document.getElementById("search-results");

const normalize = (value) => value.toLowerCase().trim();
const toFullUrl = (url) => (url.startsWith("/") ? `${base}${url.replace(/^\//, "")}` : url);

function filterPosts(rawQuery) {
  if (!listContainer || !cards.length) return;
  const term = normalize(rawQuery);
  let visibleCount = 0;

  cards.forEach((card) => {
    const haystack = `${card.dataset.title} ${card.dataset.content}`;
    const match = !term || haystack.includes(term);
    card.style.display = match ? "block" : "none";
    if (match) visibleCount += 1;
  });

  if (noResults) {
    noResults.hidden = visibleCount !== 0;
  }
}

function renderDropdown(items) {
  if (!resultsEl) return;
  if (!items.length) {
    resultsEl.innerHTML = "<div class='search-item'><p>No results found.</p></div>";
    resultsEl.classList.add("active");
    return;
  }
  resultsEl.innerHTML = items
    .map(
      (item) => `
        <div class="search-item" role="option">
          <a href="${toFullUrl(item.link)}">
            <h4>${item.title}</h4>
            <p>${item.excerpt}</p>
          </a>
        </div>
      `
    )
    .join("");
  resultsEl.classList.add("active");
}

function dropdownSearch(rawQuery) {
  if (!resultsEl) return;
  const term = normalize(rawQuery);
  if (!term) {
    resultsEl.classList.remove("active");
    resultsEl.innerHTML = "";
    return;
  }
  const matches = posts.filter((post) => {
    const haystack = `${post.title} ${post.content}`.toLowerCase();
    return haystack.includes(term);
  });
  renderDropdown(matches);
}

if (searchForm && searchInput) {
  const runSearch = (event) => {
    event.preventDefault();
    if (listContainer && cards.length) {
      filterPosts(searchInput.value);
    } else {
      dropdownSearch(searchInput.value);
    }
  };
  searchForm.addEventListener("submit", runSearch);
  searchInput.addEventListener("keydown", (event) => {
    if (event.key === "Enter") {
      runSearch(event);
    }
  });
  searchInput.addEventListener("input", () => {
    if (listContainer && cards.length) {
      filterPosts(searchInput.value);
    } else {
      dropdownSearch(searchInput.value);
    }
  });
  searchBtn?.addEventListener("click", runSearch);
}

document.addEventListener("click", (event) => {
  if (!resultsEl?.contains(event.target) && !searchForm?.contains(event.target)) {
    resultsEl?.classList.remove("active");
  }
});

const params = new URLSearchParams(window.location.search);
const initialQuery = params.get("search");
if (initialQuery && searchInput) {
  searchInput.value = initialQuery;
  if (listContainer && cards.length) {
    filterPosts(initialQuery);
  } else {
    dropdownSearch(initialQuery);
  }
}
</script>
