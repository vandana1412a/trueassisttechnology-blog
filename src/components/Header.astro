---
import { posts } from "./BlogData.astro";

const { variant = "solid" } = Astro.props;
const isTransparent = variant === "transparent";
const base = import.meta.env.BASE_URL.endsWith("/")
  ? import.meta.env.BASE_URL
  : `${import.meta.env.BASE_URL}/`;
---

<header class:list={["site-header", isTransparent ? "transparent" : "solid"]}>
  <div class="header-bar page-shell">
    <a class="logo" href="https://www.trueassistech.com/">
      <img src={`${base}logo.png`} alt="TrueAssist Technology" />
    </a>

    <div class="header-actions">
      <form class="search" id="site-search-form" role="search">
        <label class="sr-only" for="site-search">Search articles</label>
        <div class="search-box">
          <input type="search" id="site-search" name="search" placeholder="Search articlesâ€¦" aria-label="Search articles" />
          <button type="submit" id="site-search-btn" aria-label="Run search">Search</button>
        </div>
        <div class="search-results" id="search-results" role="listbox" aria-live="polite"></div>
      </form>
    </div>

  </div>
</header>

<style>
  .site-header {
    position: sticky;
    top: 0;
    z-index: 1000;
  }
  .site-header.solid { background: #fff; border-bottom: 1px solid var(--border); }
  .site-header.transparent { background: transparent; border: none; }

  .header-bar {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
    padding: 1rem 1.25rem;
  }

  .logo { display: inline-flex; align-items: center; }
  .logo img { height: 52px; width: auto; display: block; }

  .header-actions {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .search {
    position: relative;
    min-width: 260px;
  }

  .search-box {
    display: grid;
    grid-template-columns: 1fr auto;
    align-items: center;
    gap: 0.5rem;
  }

  .search input {
    padding: 0.6rem 0.85rem;
    border-radius: 999px;
    border: 1px solid var(--border);
    width: 100%;
  }

  .search button {
    padding: 0.55rem 0.9rem;
    border-radius: 999px;
    border: 1px solid #451e5d;
    background: #451e5d;
    color: #fff;
    font-weight: 700;
    cursor: pointer;
  }

  .search button:hover,
  .search button:focus-visible {
    background: #5a2677;
    border-color: #5a2677;
  }

  .search-results {
    position: absolute;
    top: calc(100% + 6px);
    right: 0;
    left: 0;
    background: #fff;
    border: 1px solid var(--border);
    border-radius: 12px;
    box-shadow: var(--shadow);
    padding: 0.5rem;
    display: none;
    z-index: 40;
  }

  .search-results.active {
    display: grid;
    gap: 0.5rem;
  }

  .search-item {
    padding: 0.5rem 0.6rem;
    border-radius: 10px;
    border: 1px solid transparent;
  }

  .search-item:hover,
  .search-item:focus-within {
    border-color: var(--border);
    background: rgba(69, 30, 93, 0.05);
  }

  .search-item h4 {
    margin: 0 0 0.2rem;
    font-size: 0.95rem;
    color: #451e5d;
  }

  .search-item p {
    margin: 0;
    color: var(--text-muted);
    font-size: 0.85rem;
  }

  @media (max-width: 900px) {
    .header-bar {
      flex-direction: column;
      align-items: stretch;
    }

    .header-actions {
      width: 100%;
      justify-content: flex-end;
    }

    .search-box {
      grid-template-columns: 1fr;
    }

    .search button {
      width: 100%;
    }
  }
</style>

<script is:inline>
const basePath = import.meta.env.BASE_URL.endsWith("/")
  ? import.meta.env.BASE_URL
  : `${import.meta.env.BASE_URL}/`;
const posts = ${JSON.stringify(posts)};
const searchInput = document.getElementById("site-search");
const resultsEl = document.getElementById("search-results");
const searchForm = document.getElementById("site-search-form");
const searchBtn = document.getElementById("site-search-btn");
let fuseInstance = null;

const normalize = (value) => value.toLowerCase().trim();
const toUrl = (url) => (url.startsWith("/") ? `${basePath}${url.replace(/^\//, "")}` : url);
const basicSearch = (query) =>
  posts.filter((post) => {
    const haystack = `${post.title} ${post.excerpt} ${post.content}`.toLowerCase();
    return haystack.includes(normalize(query));
  });

function renderResults(items) {
  if (!items.length) {
    resultsEl.innerHTML = "<div class='search-item'><p>No results found.</p></div>";
    resultsEl.classList.add("active");
    return;
  }

  resultsEl.innerHTML = items
    .map(
      (item) => `
        <div class="search-item" role="option">
          <a href="${toUrl(item.link)}">
            <h4>${item.title}</h4>
            <p>${item.excerpt}</p>
          </a>
        </div>
      `
    )
    .join("");
  resultsEl.classList.add("active");
}

function performSearch(rawQuery) {
  const query = rawQuery.trim();
  if (!query) {
    resultsEl.classList.remove("active");
    resultsEl.innerHTML = "";
    return;
  }

  let matches = [];
  if (fuseInstance) {
    matches = fuseInstance.search(query).map((res) => res.item);
  } else {
    matches = basicSearch(query);
  }
  renderResults(matches);
}

if (searchForm && searchInput) {
  searchForm.addEventListener("submit", (event) => {
    event.preventDefault();
    performSearch(searchInput.value);
  });

  searchInput.addEventListener("keydown", (event) => {
    if (event.key === "Enter") {
      event.preventDefault();
      performSearch(searchInput.value);
    }
  });

  searchBtn?.addEventListener("click", (event) => {
    event.preventDefault();
    performSearch(searchInput.value);
  });
}

document.addEventListener("click", (event) => {
  if (!resultsEl.contains(event.target) && !searchForm?.contains(event.target)) {
    resultsEl.classList.remove("active");
  }
});

import("https://cdn.jsdelivr.net/npm/fuse.js@6.6.2/dist/fuse.esm.js")
  .then(({ default: Fuse }) => {
    fuseInstance = new Fuse(posts, {
      keys: ["title", "excerpt", "content"],
      threshold: 0.35,
      ignoreLocation: true,
    });
  })
  .catch(() => {
    fuseInstance = null;
  });
</script>
